<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <h3>Equipo 1</h3>
    <%= collection_select :game, :team1_id, current_player.teams, :id, :name %><br />
  </div>
  <div class="field">
    <h3>Equipo 2</h3>
    <%= collection_select :game, :team2_id, Team.all - current_player.teams, :id, :name %><br />
  </div>
  <div class="field">
    <%= f.label :play_date %><br />
    <%= f.datetime_select :play_date %>
  </div>
  <%= f.hidden_field :game_type, :value => "friendly" %>
  <div class="actions">
    <%= f.submit "Create Friendly"%>
  </div>
<% end %>
