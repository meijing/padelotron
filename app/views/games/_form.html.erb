
<%= form_for(@game, :remote => true) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>
      <ul>
        <% @game.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <legend>Teams</legend>
    <div id="teams_selection_panel" class="fields_container_panel">

      <div class="team_field">
        <%= f.label :team1_id, "Team 1"%><br />
        <div id="game[team1_id]" name="game[team1_id]" class="team_selector first_team_selector"></div>
        <div class="team_info_mini_panel">
          Select a team to load info...
        </div>
      </div>
      <div class="team_field">
        <%= f.label :team2_id, "Team 2"%><br />
        <div id="game[team2_id]" name="game[team2_id]" class="team_selector second_team_selector"></div>
        <div class="team_info_mini_panel">
          Select a team to load info...
        </div>
      </div>
    </div>
  </fieldset>
  <fieldset>
    <legend>Date & Location</legend>
    <div id="date_and_location_selection_panel" class="fields_container_panel">
      <div id="map"></div>
      <div class="field">
        <%= f.label :playground %><br />
        <div id="game[playground_id]" name="game[playground_id]" class="playground_selector"></div>
      </div>
      <div class="field">
        <%= f.label :play_date %><br />
        <%= f.text_field :play_date %>
      </div>
      <div class="field">
        <%= f.label :create_facebook_event , "Create Facebook event?" %>
        <%= f.check_box :create_facebook_event %>
      </div>
    </div>
  </fieldset>>

  <%= f.hidden_field :game_type, :value => "friendly" %>
  <div class="actions">
    <%= f.submit "Create Friendly"%>
  </div>
<% end %>
