<h1>Listing playgrounds</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Sport</th>
    <th>Number</th>
    <th>Place</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @playgrounds.each do |playground| %>
  <tr>
    <td><%= playground.name %></td>
    <td><%= playground.sport %></td>
    <td><%= playground.number %></td>
    <td><%= playground.place %></td>
    <td><%= link_to 'Show', playground %></td>
    <td><%= link_to 'Edit', edit_playground_path(playground) %></td>
    <td><%= link_to 'Destroy', playground, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

