<h1>Listing achievements</h1>

<table>
  <tr>
    <th>Stat</th>
    <th>Achievement type</th>
    <th>Read</th>
    <th>Message</th>
    <th>Expires</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @achievements.each do |achievement| %>
  <tr>
    <td><%= achievement.stat %></td>
    <td><%= achievement.achievement_type %></td>
    <td><%= achievement.read %></td>
    <td><%= achievement.message %></td>
    <td><%= achievement.expires %></td>
    <td><%= link_to 'Show', achievement %></td>
    <td><%= link_to 'Edit', edit_achievement_path(achievement) %></td>
    <td><%= link_to 'Destroy', achievement, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

